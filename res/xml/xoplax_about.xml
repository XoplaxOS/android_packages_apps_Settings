<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/about_xoplax"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="about"
        android:title="@string/about_xoplax">

        <!-- Devices and Maintainers -->
        <PreferenceScreen
            android:key="devices"
            android:title="@string/device_maintainers_title"
            android:fragment="com.android.settings.xoplax.Devices" />

        <!-- XoplaxOS Share -->
        <Preference
            android:key="share"
            android:title="@string/share_xoplax_title"
            android:summary="@string/share_xoplax_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="sites"
        android:title="@string/sites_xoplax">

        <!-- XoplaxOS Website -->
        <Preference
            android:key="xoplax_website"
            android:title="@string/xoplax_website_title"
            android:summary="@string/xoplax_website_summary" />

        <!-- XoplaxOS Github -->
        <Preference
            android:key="xoplax_source"
            android:title="@string/xoplax_source_title"
            android:summary="@string/xoplax_source_summary" />

        <!-- XoplaxOS Facebook -->
        <Preference
            android:key="xoplax_facebook"
            android:title="@string/xoplax_facebook_title"
            android:summary="@string/xoplax_facebook_summary" />

        <!-- XoplaxOS Kaskus -->
        <Preference
            android:key="xoplax_kaskus"
            android:title="@string/xoplax_kaskus_title"
            android:summary="@string/xoplax_kaskus_summary" />

    </PreferenceCategory>

</PreferenceScreen>
